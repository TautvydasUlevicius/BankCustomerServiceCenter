<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="locale">en</parameter>

        <parameter key="env.configuration" type="collection">
            <parameter key="legal_people">%env(LEGAL_PEOPLE)%</parameter>
            <parameter key="money_deposit">%env(MONEY_DEPOSIT)%</parameter>
            <parameter key="main_currency">%env(MAIN_CURRENCY)%</parameter>
            <parameter key="deposit_percent">%env(DEPOSIT_PERCENT)%</parameter>
            <parameter key="withdrawal_percent">%env(WITHDRAWAL_PERCENT)%</parameter>
            <parameter key="withdrawal_free_amount">%env(WITHDRAWAL_FREE_AMOUNT)%</parameter>
            <parameter key="deposit_maximum_commission">%env(DEPOSIT_MAXIMUM_COMMISSION)%</parameter>
            <parameter key="withdrawal_minimum_commission">%env(WITHDRAWAL_MINIMUM_COMMISSION)%</parameter>
            <parameter key="withdrawal_amount_of_times_free">%env(WITHDRAWAL_AMOUNT_OF_TIMES_FREE)%</parameter>
        </parameter>

    </parameters>

    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />
        <prototype namespace="App\" resource="../src/*" exclude="../src/{Entity,Migrations,Tests}" />

        <service id="App\Command\CreateOperationsCommand">
            <argument>%env.configuration%</argument>
            <argument type="service" id="App\Service\DateChecker" />
            <argument type="service" id="App\Service\CurrencyManager" />
            <argument type="service" id="App\Service\OperationManager" />
            <argument type="service" id="App\Service\CommissionManager" />

            <tag name="console.command" command="app:calculate-commissions" />
        </service>

        <service id="App\Service\Validator" />
        <service id="App\Service\DateChecker" />

        <service id="App\DependencyInjection\FileParserChain" />

        <service id="App\Service\FileManager\CsvParser">
            <tag name="app.file_parser" alias="csv" />
        </service>

        <service id="App\Service\FileManager\JsonParser">
            <tag name="app.file_parser" alias="json" />
        </service>

        <instanceof id="App\Service\FileManager\FileParserInterface" public="true" />

        <service id="App\Service\CurrencyManager" />

        <service id="App\Service\DiscountManager">
            <argument>%env.configuration%</argument>
            <argument type="service" id="App\Service\DateChecker" />
        </service>

        <service id="App\Service\OperationManager" >
            <argument type="service" id="App\Service\Validator" />
            <argument type="service" id="App\DependencyInjection\FileParserChain" />
        </service>

        <service id="App\Service\CommissionManager">
            <argument>%env.configuration%</argument>
            <argument type="service" id="App\Service\DiscountManager" />
        </service>
    </services>
</container>
